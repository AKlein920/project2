<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Bootstrap CDN -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title></title>
  </head>
  <body>
    <div class="container">
      <header>
        <nav>
          <ul class='nav nav-tabs'>
            <li><a href='/cheerups'>Home</a></li>
            <li><a href="/users">Back to All Users</a></li>
            <% if (currentUser.username == user.username) { %>
              <li><a href="/users/<%=user._id%>/edit">Edit My Info</a></li>
              <li><a href="/cheerups/new">Add a New Cheerup</a></li>
            <% } %>
          </ul>
        </nav>
      </header>
      <main>
        <h1><%=user.username%></h1>
        <% for (var i=0; i<user.cheerupPage.length; i++) { %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <img src="<%=user.cheerupPage[i].visualmedia%>"/>
              <p><%=user.cheerupPage[i].body%></p>
              <% if (currentUser.username == user.username) { %>
                <form class="" action="/cheerups/<%=user.cheerupPage[i]._id%>/edit" method="GET">
                  <input type="submit" value="Edit This Cheerup">
                </form>
                <form class="" action="/cheerups/<%=user.cheerupPage[i]._id%>?_method=DELETE" method="POST">
                  <input type="submit" value="Delete This Cheerup">
                </form>
              <% } %>

            </div>
          </div>
        <% } %>

      </main>

    </div>

  </body>
</html>
